{% extends 'base.html.twig' %}

{% block body  %}

    <h1>   Liste des articles  </h1>    
    <section class="articles">   
        {% for article in articles %}                              
            <article class="article-wrapper">
                <div class="article">      
                    <div class="article-img-wrapper">
                        <img src="{{ article.image }}" alt="" >
                        <div class="article-info">
                            <h2>{{ article.title }} </h2> 
                            <p> {{ article.content | slice(0,50) }}... </p>  
                            <div class="btn-group"> 
                                <a href="{{ path('blog_show', {"id": article.id}) }}", class="btn btn-sm btn-outline-secondary">Read More</a>
                                <a href="{{path('blog_delete', {"id": article.id}) }}", class="btn btn-sm btn-outline-secondary" onclick = return confirm('Voulez vous vraiment supprimer')>Supprimer</a>
                            </div>
                            <small class="text-muted">{{ article.createAt | date('d/m/y') }} <small>
                        </div>  
                    </div>
                </div>
            </article> 
        {% endfor %}        
    </section>

{% endblock %}